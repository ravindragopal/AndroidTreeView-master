<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilDialogFragmentJsonData"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tieDialogFragmentJsonData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/wrapper_drop_down_arrow"
            android:drawableRight="@drawable/wrapper_drop_down_arrow"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="dialog fragment with json data testing long name data"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilAlertDialogListData"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tieAlertDialogListData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/wrapper_drop_down_arrow"
            android:drawableRight="@drawable/wrapper_drop_down_arrow"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="alert dialog with list data"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>